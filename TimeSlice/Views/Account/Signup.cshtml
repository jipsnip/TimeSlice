@model UserSignupModel

@{ 
    ViewData["Title"] = "Signup";
}

<h1>Login</h1>
<form method="post">
    <div>
        <label asp-for="Username">Username</label>
        <input asp-for="Username" />
        <span asp-validation-for="Username"></span>
    </div>
    <div>
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" />
        <span asp-validation-for="FirstName"></span>
    </div>
    <div>
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" />
        <span asp-validation-for="LastName"></span>
    </div>
    <div>
        <label asp-for="Password">Password</label>
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="ConfirmedPassword">Confirm Password</label>
        <input asp-for="ConfirmedPassword"/>
        <span asp-validation-for="ConfirmedPassword"></span>
    </div>
    <div>
        @{ 
            if(Model.Available == false)
            {
                <span>That username is not available.</span>
            }
        }
    </div>
    <div>
        <p>Already have an account? </p>
        <a asp-action="Login">Login</a>
    </div>
    <input type="submit" name="signup" value="signup" />
</form>