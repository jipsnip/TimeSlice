@model IEnumerable<CourseInstructorModel>

@{
    ViewData["Title"] = "All Courses";
    var counter = 0;
}
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<h1>All Courses</h1>
<div>
    <table cellpadding="5">
        @foreach (CourseInstructorModel courseInstructor in Model)
         {
            <tr id=@courseInstructor.courseId>
                <td>
                    <div>
                        <span>
                            @courseInstructor.courseName
                        </span>
                        <span>
                            @courseInstructor.instructorFirstName
                        </span>
                        <span>
                            @courseInstructor.instructorLastName
                        </span>
                        <span>
                            <button onclick="Register(@courseInstructor.courseId)">Register for Course</button>
                        </span>
                    </div>
                </td>
            </tr>
            counter++;
        }
    </table>
</div>

<script type="text/javascript">
    function Register(id) {
        console.log(id);
        var xhttp = new XMLHttpRequest();
        xhttp.onreadystatechange = function () {
            if (this.readyState === 4 && this.status === 200) {
                console.log('done');
            }
        };
        xhttp.open("POST", "/Course/Register/" + id, true);
        xhttp.send();
    }
</script>
